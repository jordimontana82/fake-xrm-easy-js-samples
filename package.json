{
  "name": "fakexrmeasy-js-samples",
  "version": "1.0.0",
  "description": "Unit tests for Dynamics 365 Client API",
  "main": "index.js",
  "directories": {
    "src": "src",
    "test": "test"
  },
  "dependencies": {
    "xrm-mock": "^3.4.10",
    "fakexrmeasy": "1.0.4"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/jquery": "3.3.29",
    "@types/node": "8.10.12",
    "@types/xrm": "8.2.10",
    "jest": "^22.4.4",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3",
    "webpack": "4.32.2",
    "webpack-cli": "^3.3.2",
    "awesome-typescript-loader": "5.2.1"
  },
  "scripts": {
    "build": "tsc && webpack -d",
    "build-webpack": "webpack -d",
    "test": "jest"
  },
  "author": "Jordi Montana",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "node"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testURL": "http://localhost/",
    "testMatch": [
      "**/test/**/*.+(ts|js)"
    ],
    "setupFiles": [
      "./setup/setup-jest.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".d.ts"
    ]
  }
}
